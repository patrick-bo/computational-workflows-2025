FROM ubuntu:18.04 as base

LABEL image.author.name="Patrick Boschmann"
LABEL image.author.email="patrick.boschmann@student.uni-tuebingen.de"

# Install dependencies
RUN apt update
RUN apt-get install --yes ca-certificates zlib1g-dev libcurl4-openssl-dev curl unzip autoconf apt-transport-https ca-certificates gnupg software-properties-common wget liblzma5 libhwloc5

# Download and install Salmon
RUN curl -k -L  'https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz' -o salmon.tar.gz
RUN tar xf salmon.tar.gz
RUN mv salmon-1.5.2_linux_x86_64/ /usr/bin/


# Set the PATH environment variable (to /usr/bin)
ENV PATH="/usr/bin/salmon-1.5.2_linux_x86_64/bin:${PATH}"

